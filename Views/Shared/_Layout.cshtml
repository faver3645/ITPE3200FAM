<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyQuiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .card { border-radius: 0.75rem; }
        .card h5 { font-weight: 600; }
        .hero-section { background-color: #f8f9fa; padding: 4rem 2rem; border-radius: 0.75rem; }
        footer { background-color: #f8f9fa; padding: 1rem; text-align: center; margin-top: 2rem; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">MyQuiz</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Quiz" asp-action="Index">Manage Quizzes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TakeQuiz" asp-action="Index">Take Quiz</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 <footer class="footer mt-5">
    <div class="container py-5">
        <div class="row g-4">
            <!-- Quick Links -->
            <div class="col-md-6">
                <div class="footer-card p-4 h-100 shadow-sm rounded">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled mb-0">
                        <li><a asp-controller="Home" asp-action="Index" class="footer-link">Home</a></li>
                        <li><a asp-controller="Quiz" asp-action="Create" class="footer-link">Create Quiz</a></li>
                        <li><a asp-controller="TakeQuiz" asp-action="Index" class="footer-link">Take Quiz</a></li>
                    </ul>
                </div>
            </div>

            <!-- Contact -->
            <div class="col-md-6">
                <div class="footer-card p-4 h-100 shadow-sm rounded">
                    <h5 class="fw-bold mb-3">Contact Us</h5>
                    <p class="mb-1 text-muted"><i class="bi bi-envelope-fill me-2"></i>info@myquiz.com</p>
                    <p class="mb-0 text-muted"><i class="bi bi-telephone-fill me-2"></i>+47 12121212</p>
                </div>
            </div>
        </div>

        <hr class="my-4">

        <div class="text-center text-muted small">
            &copy; 2025 - MyQuiz 
        </div>
    </div>
</footer>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>